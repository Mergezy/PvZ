<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightGrass"
    tools:context=".cherryPage">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="262dp"
        android:layout_height="83dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pvzlogo250x250" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="206dp"
        android:layout_height="43dp"
        android:layout_marginStart="5dp"
        android:ellipsize="end"
        android:maxLines="20"
        android:text="Вишнёвая бомба"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="216dp"
        android:layout_height="96dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logocherry" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="675dp"
        android:layout_height="104dp"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:maxLines="20"
        android:text="Представляет из себя два круглых красных плода вишни типа костянка с глазами и ртами, которые соединены плодоножками, заканчивающимися небольшими зелёными листьями. При посадке взрывается через секунду, нанося урон в 90 горошин (1800 единиц) в радиусе 3х3 клетки, при этом уничтожая всех зомби и роботов (кроме Гаргантюа, Гига-футбольного зомби, Гига-гаргантюа, Чертёнка на чайке, Гаргантюа-премьера, боссов, Зомби-фараона и некоторых роботов из эпохи Далёкое Будущее) (если у них полное здоровье). "
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <ImageButton
        android:id="@+id/imageButton10"
        android:layout_width="370dp"
        android:layout_height="77dp"
        android:layout_marginTop="10dp"
        android:background="@color/lightGrass"
        android:onClick="goToZomiePage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:srcCompat="@drawable/logogotozomb" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:onClick="goToPlantPage"
        android:text="Back"
        app:layout_constraintEnd_toStartOf="@+id/imageButton10"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:onClick="goToMainPage"
        android:text="Main MEnu"
        app:layout_constraintStart_toEndOf="@+id/imageButton10"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />
</androidx.constraintlayout.widget.ConstraintLayout>